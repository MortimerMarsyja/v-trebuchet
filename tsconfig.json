{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components/*": [
        "00-components/*"
      ],
      "@containers/*": [
        "01-containers/*"
      ],
      "@pages/*": [
        "02-pages/*"
      ],
      "@hooks/*": [
        "03-pages/*"
      ],
      "@contexts/*": [
        "04-contexts/*"
      ],
      "@utils/*": [
        "05-utils/*"
      ],
      "@assets/*": [
        "06-assets/*"
      ],
    },
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}